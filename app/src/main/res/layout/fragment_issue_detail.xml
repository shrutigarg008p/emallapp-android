<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/constraint_layout"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp">

        <TextView
            android:id="@+id/issue_id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_semibold"
            android:text="Issue Number: RC13456H2345623456 "
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintStart_toStartOf="@id/issue_id_number"
            app:layout_constraintEnd_toEndOf="@id/issue_id_number"
            app:layout_constraintTop_toBottomOf="@id/issue_id_number"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/item_name_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="Item Name:"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="Samsung Galaxy Note 20 Ultra"
            android:textColor="@color/grey_font"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@+id/item_name_heading"
            app:layout_constraintStart_toEndOf="@+id/item_name_heading"
            app:layout_constraintTop_toTopOf="@+id/item_name_heading"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="Evaluation ID:"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_name_heading" />

        <TextView
            android:id="@+id/item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="49"
            android:textColor="@color/grey_font"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@+id/textView16"
            app:layout_constraintStart_toEndOf="@+id/textView16"
            app:layout_constraintTop_toTopOf="@+id/textView16"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="Type:"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="@id/textView16"
            app:layout_constraintTop_toBottomOf="@id/textView16" />

        <TextView
            android:id="@+id/item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="Item Not As Described"
            android:textColor="@color/grey_font"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@+id/textView39"
            app:layout_constraintStart_toEndOf="@+id/textView39"
            app:layout_constraintTop_toTopOf="@+id/textView39" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="Raised By:"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView39" />

        <TextView
            android:id="@+id/item_raised_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="Evaluator User"
            android:textColor="@color/grey_font"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@+id/textView45"
            app:layout_constraintStart_toEndOf="@+id/textView45"
            app:layout_constraintTop_toTopOf="@+id/textView45" />

        <TextView
            android:id="@+id/raised_at_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="Raised At:"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView45" />

        <TextView
            android:id="@+id/item_raised_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="2021-07-15 | 13:52"
            android:textColor="@color/grey_font"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@+id/raised_at_heading"
            app:layout_constraintStart_toEndOf="@+id/raised_at_heading"
            app:layout_constraintTop_toTopOf="@+id/raised_at_heading" />

        <TextView
            android:id="@+id/closed_at_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="Closed At:"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/raised_at_heading" />

        <TextView
            android:id="@+id/item_closed_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="2021-07-15 | 13:52"
            android:textColor="@color/grey_font"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@+id/closed_at_heading"
            app:layout_constraintStart_toEndOf="@+id/closed_at_heading"
            app:layout_constraintTop_toTopOf="@+id/closed_at_heading" />

        <TextView
            android:id="@+id/closed_by_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="Closed By:"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/closed_at_heading" />

        <TextView
            android:id="@+id/item_closed_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="2021-07-15 | 13:52"
            android:textColor="@color/grey_font"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintBottom_toBottomOf="@+id/closed_by_heading"
            app:layout_constraintStart_toEndOf="@+id/closed_by_heading"
            app:layout_constraintTop_toTopOf="@+id/closed_by_heading" />

        <View
            android:id="@+id/divider_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintStart_toStartOf="@id/divider"
            app:layout_constraintEnd_toEndOf="@id/divider"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/closed_by_heading"/>

        <TextView
            android:id="@+id/issue_title_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="Issue Title"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_2" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:text="I have found some fault."
            android:textColor="@color/grey_font"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintTop_toBottomOf="@id/issue_title_heading"
            app:layout_constraintStart_toStartOf="@id/issue_title_heading"/>

        <TextView
            android:id="@+id/issue_description_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/mulish_regular"
            android:text="Issue Description"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_text" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_regular"
            android:text="There are few scratches on the phone as well as camera is also not working."
            android:textColor="@color/grey_font"
            android:textFontWeight="600"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintTop_toBottomOf="@id/issue_description_heading"
            app:layout_constraintStart_toStartOf="@id/issue_description_heading"/>

        <Button
            android:id="@+id/chat_with_admin_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:backgroundTint="@color/selected_color"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center"
            android:text="Chat with Admin"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toStartOf="@+id/chat_with_seller_btn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description_text" />

        <Button
            android:id="@+id/chat_with_seller_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center"
            android:text="CHat with seller"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/chat_with_admin_btn"
            app:layout_constraintTop_toBottomOf="@id/description_text" />

        <View
            android:id="@+id/seperationLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/grey_font"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat_with_admin_btn" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/close_btn_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/round_corner_golden_border"
            android:foregroundGravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seperationLine">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/close_issue_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/mulish_regular"
                    android:text="Close"
                    android:textColor="@color/selected_color"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/chatIcon"
                    app:layout_constraintTop_toTopOf="parent"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.emall.net.customview.MulishRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="رتب حسب"
                android:textColor="@color/selected_color"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.emall.net.customview.MulishRegular
                android:id="@+id/defaultlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center"
                android:text="@string/_default"
                android:textColor="#3e3e3e"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/tick_image"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/category_tick"
                android:visibility="gone" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"
                android:layout_below="@+id/defaultlist"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/grey_colour"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.emall.net.customview.MulishRegular
                android:id="@+id/recentlyarrived"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center"
                android:text="@string/recently_arrived"
                android:textColor="#3e3e3e"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/tick_image2"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/category_tick"
                android:visibility="gone" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_below="@+id/recentlyarrived"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/grey_colour"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.emall.net.customview.MulishRegular
                android:id="@+id/lowtohigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center"
                android:text="@string/price_low_to_high"
                android:textColor="#3e3e3e"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/tick_image3"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentStart="true"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/category_tick"
                android:visibility="gone" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"
                android:layout_below="@+id/lowtohigh"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/grey_colour"
                android:textColor="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.emall.net.customview.MulishRegular
                android:id="@+id/hightolow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:gravity="center"
                android:text="@string/price_high_to_low"
                android:textColor="#3e3e3e"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/tick_image4"
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentStart="true"
                android:contentDescription="@null"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/category_tick"
                android:visibility="gone" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dip"
                android:layout_below="@+id/hightolow"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/grey_colour"
                android:textColor="@color/black" />
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:background="@drawable/red_rectangle"
            android:padding="@dimen/fab_margin"
            android:text="تطبيق"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>